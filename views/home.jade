  link(rel='stylesheet', href='/publics/css/home.css')
  script(type='text/javascript', src='/publics/js/home.js', defer='')

block title
  title ThaiVan - Home

block content
  header
    include ./layouts/navbar
  
    .view.intro-2
      .full-bg-img
        .mask
          .container.flex-center
            .RoundBg(style='background-color:rgba(0,0,0,0.3);padding-left: 30px;border-radius:100px;')
